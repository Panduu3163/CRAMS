# Production Environment Variables for Render Deployment
# Copy this file to .env.production and fill in your actual values

# Database Configuration (Render will provide this automatically)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Server Configuration
NODE_ENV=production
PORT=10000

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Client URL (your frontend URL on Render)
CLIENT_URL=https://your-frontend-app.onrender.com

# Redis Configuration (optional - for session management)
REDIS_URL=redis://localhost:6379
